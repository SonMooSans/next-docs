{
  "name": "@fumadocs/mdx-remote",
  "version": "0.0.2",
  "description": "The remote MDX files adapter for Fumadocs",
  "keywords": [
    "NextJs",
    "Docs",
    "fumadocs",
    "next-mdx-remote"
  ],
  "homepage": "https://fumadocs.vercel.app",
  "repository": "github:fuma-nama/fumadocs",
  "license": "MIT",
  "author": "Fuma Nama",
  "exports": {
    "./github": {
      "import": "./dist/github/index.mjs",
      "types": "./dist/github/index.d.mts"
    },
    "./github/dev": {
      "import": "./dist/github/dev/index.mjs",
      "types": "./dist/github/dev/index.d.mts"
    },
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.mts"
      ],
      "github": [
        "./dist/github/index.d.mts"
      ],
      "github/dev": [
        "./dist/github/dev/index.d.mts"
      ],
      "github/dev/client": [
        "./dist/github/dev/client.d.mts"
      ]
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.1",
    "bufferutil": "^4.0.8",
    "chokidar": "^3.6.0",
    "fast-glob": "^3.3.1",
    "gray-matter": "^4.0.3",
    "micromatch": "^4.0.7",
    "rehype-img-size": "^1.0.1",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/mdx": "^2.0.13",
    "@types/micromatch": "^4.0.7",
    "@types/node": "18.17.5",
    "@types/react": "^18.3.3",
    "@types/ws": "^8.5.10",
    "eslint-config-custom": "workspace:*",
    "fumadocs-core": "workspace:*",
    "next": "^14.2.4",
    "tsconfig": "workspace:*",
    "unified": "^11.0.4",
    "vfile": "^6.0.1"
  },
  "peerDependencies": {
    "fumadocs-core": ">= 12.1.1",
    "next": ">= 14.1.0",
    "react": ">= 18"
  },
  "publishConfig": {
    "access": "public"
  }
}
