{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_ALGOLIA_APP_ID",
    "NEXT_PUBLIC_ALGOLIA_API_KEY",
    "NEXT_PUBLIC_ALGOLIA_INDEX"
  ],
  "tasks": {
    "build": {
      "env": ["ALGOLIA_API_KEY"],
      "dependsOn": ["^build"],
      "outputs": [
        ".contentlayer/**",
        "!.contentlayer/.cache/**",
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {},
    "types:check": {
      "dependsOn": [],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    }
  }
}
